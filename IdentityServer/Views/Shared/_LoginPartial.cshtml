@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-page="/account/logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-top-links navbar-right">
            <li>
                <a asp-area="" asp-controller="account" asp-action="logout" class="navbar-link">退出</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="account" asp-action="register">注册</a></li>
        <li><a asp-area="" asp-controller="account" asp-action="login">登录</a></li>
    </ul>
}